var NS = (document.layers) ? 1:0
var IE = (document.all) ? 1:0
var NS6 = (document.getElementById) ? 1:0
 function showLayer(lyr) {
        if (IE) document.all[lyr].style.visibility = "visible";
        else if (NS) document.layers[lyr].visibility = "visible";
        else if (NS6) document.getElementById(lyr).style.visibility = "visible";
}
 function hideLayer(lyr) {
        if (IE) document.all[lyr].style.visibility = "hidden";
        else if (NS) document.layers[lyr].visibility = "hidden";
        else if (NS6) document.getElementById(lyr).style.visibility = "hidden";
}
 function show(lnum) {
        showLayer('ly' + lnum);
        return true;
}
 function hide(lnum) {
        hideLayer('ly' + lnum);
        return true;
}
 function openPopup(url) {
		myPopup=window.open(url,"NJIT", "resizable=yes,toolbar=yes,scrollbars=yes,menubar=yes,status=yes");
		myPopup.focus();
}
